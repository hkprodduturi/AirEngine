{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://airengine.dev/schemas/self-heal-patch-result/1.0",
  "title": "AirEngine Self-Heal Patch Result",
  "description": "Schema for patch proposals generated by the self-healing patch bot (SH3). Defines the structure of proposed diffs, tests, and invariant additions.",
  "type": "object",
  "required": [
    "schema_version",
    "patch_id",
    "incident_id",
    "timestamp",
    "status",
    "patch_scope",
    "diffs",
    "tests_added",
    "invariants_added",
    "verification_status"
  ],
  "properties": {
    "schema_version": { "const": "1.0" },
    "patch_id": {
      "type": "string",
      "pattern": "^SP-\\d{8}-\\d{6}-[a-z0-9]{6}$"
    },
    "incident_id": { "type": "string" },
    "timestamp": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T"
    },
    "status": {
      "type": "string",
      "enum": ["proposed", "approved", "applied", "rejected", "failed_verification"]
    },
    "patch_scope": { "$ref": "#/$defs/patchScope" },
    "diffs": {
      "type": "array",
      "items": { "$ref": "#/$defs/diffEntry" }
    },
    "tests_added": {
      "type": "array",
      "items": { "type": "string" }
    },
    "invariants_added": {
      "type": "array",
      "items": { "type": "string" }
    },
    "verification_status": {
      "oneOf": [{ "$ref": "#/$defs/verificationRef" }, { "type": "null" }]
    },
    "approver": {
      "oneOf": [{ "type": "string" }, { "type": "null" }]
    },
    "notes": {
      "oneOf": [{ "type": "string" }, { "type": "null" }]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "patchScope": {
      "type": "object",
      "required": ["subsystems", "files", "max_lines_changed"],
      "properties": {
        "subsystems": {
          "type": "array",
          "items": { "type": "string" }
        },
        "files": {
          "type": "array",
          "items": { "type": "string" }
        },
        "max_lines_changed": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "diffEntry": {
      "type": "object",
      "required": ["file_path", "diff_type", "content"],
      "properties": {
        "file_path": { "type": "string" },
        "diff_type": {
          "type": "string",
          "enum": ["modify", "create", "delete"]
        },
        "content": { "type": "string" },
        "lines_added": { "type": "integer", "minimum": 0 },
        "lines_removed": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "verificationRef": {
      "type": "object",
      "required": ["verify_id", "verdict"],
      "properties": {
        "verify_id": { "type": "string" },
        "verdict": {
          "type": "string",
          "enum": ["pass", "fail", "partial"]
        }
      },
      "additionalProperties": false
    }
  }
}
